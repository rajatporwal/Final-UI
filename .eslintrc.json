{
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": ["react-app", "prettier", "prettier/react"],
    "plugins": ["react", "prettier"],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "quotes": [2, "single", { "avoidEscape": true }],
      "prettier/prettier": [
        "error",
        {
          "printWidth": 80,
          "trailingComma": "es5",
          "semi": true,
          "jsxSingleQuote": true,
          "singleQuote": true,
          "useTabs": false
        }
      ]
    }
}